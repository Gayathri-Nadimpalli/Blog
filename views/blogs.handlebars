<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Example App - Home</title>
</head>
<body>
 
    <!-- Uses built-in `if` helper. -->
  {{#if showTitle}}
    <h1>Blogs</h1>
  {{/if}}
 
    <!-- Calls `foo` helper, overridden at render-level. -->
    {{foo}}
  <h1>Blogs</h1>  
  <div>
    {{#if showUser}}
      <div id="CreateBlog" ><a href="/newBlog">Create New Blog </a></div> 
    {{/if}}
    
    {{#if showAdmin}}
      <div id="PendingBlogs" ><a href="/pendingBlogs">Approve pending blogs</a></div> 
    {{/if}}
    
    {{#each blogs}}
      <div><h3>{{this.title}}</h3></div>
      <div>{{this.body}}</div>
      <br>
    {{/each}}
  </div>
 
</body>
</html>